{
    "name": "FORTRAN DSP Dev Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "VOID",
    "customizations": {
        "extensions": [
            "swmore.fortls",
            "ms-vscode.makefile-tools"
        ],
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash",
            "fortls.executablePath": "/home/VOID/.local/bin/fortls"
        }
    },
    "postCreateCommand": "echo 'FORTRAN Dev Container ready!'"
}
